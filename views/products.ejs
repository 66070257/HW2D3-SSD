<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f8;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            max-width: 1000px;
            margin: 0 auto 30px auto;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 15px;
            font-weight: bold;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        button {
            background-color: #3498db;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #2980b9;
        }

        ul {
            list-style-type: none;
            padding: 0;
            max-width: 1000px;
            margin: auto;
        }

        li {
            background: #fff;
            margin-bottom: 15px;
            padding: 15px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.05);
        }

        .product-link {
            font-size: 18px;
            font-weight: bold;
            text-decoration: none;
            color: #2c3e50;
        }

        .price {
            color: #27ae60;
            font-weight: bold;
            margin-left: 10px;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .actions button {
            background-color: #e74c3c;
        }

        .actions button:hover {
            background-color: #c0392b;
        }

        .edit-btn {
            background-color: #e67e22;
            padding: 8px 12px;
            text-decoration: none;
            color: white;
            border-radius: 5px;
        }

        .edit-btn:hover {
            background-color: #d35400;
        }
    </style>
</head>

<body>

    <h1>Create Product</h1>
    <form action="/api" method="POST">
        <label>
            Name:
            <input type="text" name="name" required placeholder="Enter product name">
        </label>
        <label>
            Price:
            <input type="number" step="0.01" name="price" required placeholder="Enter product price">
        </label>
        <label>
            Discount (%):
            <input type="number" name="discount" min="0" max="100" value="0" placeholder="0">
        </label>
        <label>
            Review Count:
            <input type="number" name="review_count" min="0" value="0" placeholder="0">
        </label>
        <label>
            Image URL:
            <input type="text" name="image_url" placeholder="https://example.com/image.jpg">
        </label>
        <button type="submit">Create</button>
    </form>

    <form action="/api/search/:keyword" method="GET" style="max-width: 1000px; margin: 0 auto 20px auto;">
        <input type="text" name="q" placeholder="Search products..." value="<%= typeof q !== 'undefined' ? q : '' %>"
            style="width: 100%; padding: 10px; font-size: 16px; border-radius: 5px; border: 1px solid #ccc;">
        <button type="submit"
            style="margin-top: 10px; padding: 10px 15px; background-color: #3498db; color: white; border:none; border-radius: 5px; cursor:pointer;">
            Search
        </button>
    </form>

    <h1>Products List</h1>
    <ul>
        <% products.forEach(product=> { %>
            <li>
                <div class="product-item">
                    <a href="/api/<%= product.id %>" class="product-link">
                        <%= product.name %>
                    </a>
                    <span class="price">$<%= product.price %></span>
                </div>

                <div>
                    <span class="discount">Discount: <%= product.discount %>%</span>
                </div>

                <div class="reviews">
                    Reviews: <%= product.review_count %>
                </div>

                <div class="image">
                    <img src="<%= product.image_url %>" alt="<%= product.name %>" style="max-width:150px; height:auto;">
                </div>

                <div class="actions">
                    <form action="/api/<%= product.id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit" title="Soft Delete">Soft Delete</button>
                    </form>
                </div>
            </li>
            <% }) %>
    </ul>


</body>

</html>
